{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ZeroHz",
  "version": "0.2.2",
  "identifier": "com.zerohz.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ZeroHz",
        "width": 700,
        "height": 100,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost data:; font-src 'self' data:; connect-src 'self' ipc: http://ipc.localhost https://*.posthog.com;",
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-start-dragging",
            "core:window:allow-set-size",
            "core:window:allow-set-position",
            "core:window:allow-current-monitor",
            "core:window:allow-outer-position",
            "core:default",
            "autostart:default",
            "opener:default",
            "log:default",
            "log:allow-log",
            "posthog:default",
            "posthog:allow-capture",
            "posthog:allow-identify",
            "posthog:allow-get-config",
            "posthog:allow-get-distinct-id",
            "posthog:allow-reset",
            "posthog:allow-alias",
            "store:default",
            "store:allow-load",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "dialog:default",
            "dialog:allow-confirm",
            "dialog:allow-message",
            "dialog:allow-ask"
          ]
        }
      ]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Aweeesome-lab/ZeroHz/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU0MENGNEQ0RjBDQUIxMkYKUldRdnNjcncxUFFNVk1GMUs0OHhjczZnNEdNbjRWRW1xOWFJTlJmZEc5S0tEcFoxbGNoYUluTlQK"
    }
  }
}
